  position: relative;
  float: left;
}
 
nav li ul { 
  display: none; 
}
 
nav ul li a {
  display: block;
  text-decoration: none;
  padding: 7px 15px 3px 15px;
  background: purple;
  color: black;  
  margin-left: 1px;
  white-space: nowrap;
  height:15px; /* Width and height of top-level nav items */
  width:60px;
  text-align:center;
 
}
 
nav ul li a:hover { 
  background: red; 
}
 
nav li:hover ul {
  display: block;
  position: absolute;
  height:30px;
}
 
nav li:hover li {
  float: none;
  font-size: 11px;
 
}
 
nav li:hover a { 
  background: orange; 
  height:30px; /* Height of lower-level nav items is shorter than main level */
}
 
nav li:hover li a:hover { 
  background: green; 
}
 
nav ul li ul li a {
    text-align:center; /* Top-level items are centered, but nested list items are left-aligned */
}

/* END NAV MENU */

